{
  "compilerOptions": {
    "strict": true,

    "outDir": "./dist",

    "module": "esnext",
    "jsx": "react",
    "lib": ["esnext"],
    "target": "es6",

    "declaration": true,
    "sourceMap": true,

    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "removeComments": true
  },
  "include": ["./src"],
  "exclude": ["./node_modules", "./src/__tests__"]
}
